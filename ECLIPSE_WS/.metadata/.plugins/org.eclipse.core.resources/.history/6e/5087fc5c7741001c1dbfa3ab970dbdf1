#ifndef HMI_ECU_H_
#define HMI_ECU_H_
#define READY                                               0x01
#define DONE                                                0x02
#define CHECK_IF_PASSWORD_SAVED                             0xB
#define PASSWORD_SAVED                                      0xC
#define NO_SAVED_PASSWORD                                   0xD
#define PASSWORD_SIZE                                       5
#define PASSWORD_MISMATCH                                   0
#define PASSWORD_MATCH                                      1
#define ROW_ZERO                                            0
#define COL_EIGHT                                           8
#endif /* HMI_ECU_H_ */
